[user]
	name = sadiq_from_thinkpad
	email = sadiqonemail@gmail.com
[alias]
    # show alias
	ali = config --get-regexp alias
	g = log --oneline --graph
	ga = log --oneline --graph --all
	a = add
	# add all
	aa = add .
	# add & commit
	ac = commit -am
	c = commit -m
	# commit again
	cag = commit --amend
	# commit again no-edit
	cagn = commit --amend --no-edit
	sw = switch
	swc = switch -c
	s = status -s
	sl = status
	sv = status -v
	svv = status -v -v
	# stats
	st = show --stat
	# stat current
	stc = show --stat HEAD
	# clone
	cl = clone
	ch = checkout
	b = branch
	ba = branch -a
	br = branch -r
	bm = branch --merged
	bnm = branch --no-merged
	p = push
	pl = pull
	f = fetch
	r = remote
	rv = remote -v
	# unstage
	us = restore --staged
	# unstage all
	usa = restore --staged .
	rebase-root = rebase -i --root
	delete-alias = config --global --unset alias.ALI_NAME
	ce = config --global -e
	dlb = !git checkout main && git pull --prune && git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d
	bclean = "!f() { branches=$(git branch --merged ${1-main} | grep -v " ${1-main}$"); [ -z \"$branches\" ] || git branch -d $branches; }; f"
[safe]
	directory = /etc/nginx/sites-available
[core]
	editor = vi
